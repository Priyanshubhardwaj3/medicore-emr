# MediCore EMR Environment Configuration
# Copy this file to .env and update the values for your production environment

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-ip-address

# Database Configuration
DB_NAME=emr_db
DB_USER=root
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=3306

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://127.0.0.1:6379/1

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/medicore_emr.log

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Backup Settings
BACKUP_DIR=/path/to/backups
BACKUP_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_URL=https://your-domain.com/health/ 